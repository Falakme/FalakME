---
import CodeBlock from '~/components/CodeBlock.astro';
import PageTitleBlock from '~/components/PageTitleBlock.astro';
import LatestBlogPostLink from '../LatestBlogPostLink.astro';
import Link from '../Link.astro';
import HeroBackground from './HeroBackground.astro';
import Teams from './Teams.astro';
---

<section class="relative">
	<div
		class="mt-16 md:mt-20 lg:mt-24 px-4 sm:px-8 mx-auto w-full sm:max-w-screen-md flex flex-col items-center justify-center gap-5 md:gap-6 lg:gap-8"
	>
		<LatestBlogPostLink />
		<PageTitleBlock
			wide
			lg
			body="We blend creativity, code, and cutting-edge technology to turn ideas into reality."
		>
			<h1
				slot="title"
				class="text-balance mb-4 text-center text-3xl/[1.1] font-bold font-heading sm:max-w-[24ch] md:text-4xl/[1.1] xl:text-5xl/[1.1]"
			>
				AI-Driven Innovation
			</h1>
		</PageTitleBlock>

		<div class="grid grid-rows-2 gap-2">
			<Link href="/support/" class="primary w-full h-fit">
				<span
					class="bg-clip-text text-transparent bg-blue-purple-gradient group-hover:text-astro-blue transition-all ease-in-out duration-500"
				>
					Begin Your AI Journey
				</span>
			</Link>
			<a href="mailto:hello@falak.me"><CodeBlock>hello@falak.me</CodeBlock></a>
		</div>
	</div>

	<HeroBackground />

	<Teams />
</section>
